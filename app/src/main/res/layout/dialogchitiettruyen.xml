<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/anhcctImageView"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:scaleType="centerInside" />

    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tentruyencctTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="Truyện Co Tích"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tentacgiacctTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tác giả : nettruyen.com"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/namxuatbancctTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Năm xuất bản : nettruyen.com"
            android:textSize="18dp"
            android:textStyle="bold" />

    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/motacctTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:maxLines="6"
            android:padding="10dp"
            android:text="Mô tả ngắn"
            android:textSize="15dp" />

    </ScrollView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dp">

        <Button
            android:id="@+id/dimissButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#777676"
            android:text="Thoát" />

        <Button
            android:id="@+id/doctruyenButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="2"
            android:backgroundTint="#4E9F5C"
            android:text="Đọc Truyện" />
    </LinearLayout>

</LinearLayout>